<div class="modal fade" id="modal-gaurantor" data-bs-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-uppercase">@JSMS.Resources.Language.GuarantorInfo</h4>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <form method="post" enctype="multipart/form-data">
                <input type="hidden" id="guarantor-id">

                <div class="modal-body">
                    <section>
                        <div class="row">
                            <div class="col-md-9">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group ">
                                            <label for="birth-name">@JSMS.Resources.Language.FirstName</label>
                                            <input type="text" class="form-control" id="g-birth-name" placeholder="@JSMS.Resources.Language.Input @JSMS.Resources.Language.FirstName">

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group ">
                                            <label for="nick-name">@JSMS.Resources.Language.LastName</label>
                                            <input type="text" class="form-control" id="g-nick-name" placeholder="@JSMS.Resources.Language.Input @JSMS.Resources.Language.LastName">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group ">
                                            <label for="national">@JSMS.Resources.Language.National</label>
                                            <input type="text" class="form-control" id="g-national" placeholder="@JSMS.Resources.Language.Input @JSMS.Resources.Language.National">

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group ">
                                            <label for="nationality">@JSMS.Resources.Language.Nationality</label>
                                            <input type="text" class="form-control" id="g-nationality" placeholder="@JSMS.Resources.Language.Input @JSMS.Resources.Language.Nationality">

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group ">
                                            <label for="phone1">@JSMS.Resources.Language.Phone</label>
                                            <input type="text" maxlength="15" class="form-control" id="g-phone1" placeholder="@JSMS.Resources.Language.Input @JSMS.Resources.Language.Phone">

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group ">
                                            <label for="phone2">@JSMS.Resources.Language.Phone2</label>
                                            <input type="text" maxlength="15" class="form-control" id="g-phone2" placeholder="@JSMS.Resources.Language.Input @JSMS.Resources.Language.Phone2">

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 pl-5 mt-3">
                                <div class="row">
                                    <div class="form-group">
                                        <img class="center img-responsive img-thumbnail" style="width: 12rem; height: 10rem"
                                             src="~/Images/blank-image.png" id="g-image" />
                                        <b class="btn-style-2 btn btn-dark">
                                            <i class="fa fa-upload pe-lg-3"></i> <span> @JSMS.Resources.Language.UploadImage</span>
                                            <input onchange="guarantorImage(this)" type="file" id="g-image-file"
                                                   accept=".png, .jpg, .jpeg, .svg" />
                                        </b>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="g-gender">@JSMS.Resources.Language.Gender</label>
                                    <select class="form-select" id="g-gender">
                                        <option value="false">@JSMS.Resources.Language.Female</option>
                                        <option value="true">@JSMS.Resources.Language.Male</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group ">
                                    <label for="dob">@JSMS.Resources.Language.DOB</label>
                                    <input type="date" class="form-control" id="g-dob" placeholder="@JSMS.Resources.Language.Select @JSMS.Resources.Language.DOB">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="g-education">@JSMS.Resources.Language.Education</label>
                                    <select class="form-select" id="g-education">
                                        <option value="-1">---@JSMS.Resources.Language.Select @JSMS.Resources.Language.Education---</option>
                                        <option value="1">@JSMS.Resources.Language.NotStudied</option>
                                        <option value="2">@JSMS.Resources.Language.PrimarySchool</option>
                                        <option value="3">@JSMS.Resources.Language.SecondarySchool</option>
                                        <option value="4">@JSMS.Resources.Language.HighSchool</option>
                                        <option value="5">@JSMS.Resources.Language.University</option>
                                        <option value="6">@JSMS.Resources.Language.Other</option>
                                    </select>
                                </div>
                            </div>
                            <label>@JSMS.Resources.Language.POB</label>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="g-birth-province">@JSMS.Resources.Language.Province</label>
                                    <select id="g-birth-province" class="form-select">
                                        <option value="-1">---@JSMS.Resources.Language.Select @JSMS.Resources.Language.Province---</option>
                                        @foreach (var province in Model.Provinces)
                                        {
                                            <option value="@province.Id">@province.NameKh / @province.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3" id="g-birth-dis">
                                <div class="form-group">
                                    <label for="g-birth-district">@JSMS.Resources.Language.District</label>
                                    <input type="hidden" id="g-birth-dis-id" />
                                    <select id="g-birth-district" class="form-select">
                                        <option value="-1">---@JSMS.Resources.Language.Select @JSMS.Resources.Language.District---</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3" id="g-birth-com">
                                <div class="form-group">
                                    <label for="g-birth-commune">@JSMS.Resources.Language.Commune</label>
                                    <input type="hidden" id="g-birth-com-id" />
                                    <select id="g-birth-commune" class="form-select">
                                        <option value="-1">---@JSMS.Resources.Language.Select @JSMS.Resources.Language.Commune---</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group" id="g-birth-vil">
                                    <label for="g-birth-village">@JSMS.Resources.Language.Village</label>
                                    <input type="hidden" id="g-birth-vil-id" />
                                    <select id="g-birth-village" class="form-select">
                                        <option value="-1">---@JSMS.Resources.Language.Select @JSMS.Resources.Language.Village---</option>
                                    </select>
                                </div>
                            </div>

                            <label>@JSMS.Resources.Language.CurrentAddress</label>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="g-current-province">@JSMS.Resources.Language.Province</label>
                                    <select id="g-current-province" class="form-select">
                                        <option value="-1">---@JSMS.Resources.Language.Select @JSMS.Resources.Language.Province---</option>
                                        @foreach (var province in Model.Provinces)
                                        {
                                            <option value="@province.Id">@province.NameKh / @province.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3" id="g-current-dis">
                                <div class="form-group">
                                    <label for="g-current-district">@JSMS.Resources.Language.District</label>
                                    <input type="hidden" id="g-current-dis-id" />
                                    <select id="g-current-district" class="form-select">
                                        <option value="-1">---@JSMS.Resources.Language.Select @JSMS.Resources.Language.District---</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3" id="g-current-com">
                                <div class="form-group">
                                    <label for="g-current-commune">@JSMS.Resources.Language.Commune</label>
                                    <input type="hidden" id="g-current-com-id" />
                                    <select id="g-current-commune" class="form-select">
                                        <option value="-1">---@JSMS.Resources.Language.Select @JSMS.Resources.Language.Commune---</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3 ">
                                <div class="form-group" id="g-current-vil">
                                    <label for="g-current-village">@JSMS.Resources.Language.Village</label>
                                    <input type="hidden" id="g-current-vil-id" />
                                    <select id="g-current-village" class="form-select">
                                        <option value="-1">---@JSMS.Resources.Language.Select @JSMS.Resources.Language.Village---</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="g-noted">@JSMS.Resources.Language.Description</label>
                                    <textarea class="form-control" id="g-noted" placeholder="@JSMS.Resources.Language.Input @JSMS.Resources.Language.Description"></textarea>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>

                <div class="modal-footer">
                    <section>
                        <button type="button" class="btn btn-dark" data-bs-dismiss="modal">
                            <i class=" fas fa-times-circle"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Close</span>
                        </button>
                        <button type="button" class="btn btn-success" id="update-guarantor">
                            <i class=" fas fas fa-redo-alt"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Update</span>
                        </button>
                        <button type="button" class="btn btn-info" id="save-guarantor">
                            <i class=" fas fa-save"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Save</span>
                        </button>
                    </section>
                </div>

            </form>
        </div>

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

