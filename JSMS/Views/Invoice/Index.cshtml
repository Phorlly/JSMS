
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin/Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="m-0 text-uppercase" style="font-family:'Khmer OS Battambang'">@JSMS.Resources.Language.InvoicePage</h1>
            </div>

            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Home")">@JSMS.Resources.Language.Home</a>
                    </li>
                    <li class="breadcrumb-item">@JSMS.Resources.Language.InvoicePage</li>
                </ol>
            </div>
        </div><!-- /.row -->
    </div>
</div>
<div id="loading-gif"></div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="float-sm-right mr-5">
                    @*<button type="button" id="total" class="btn btn-warning btn-sm " data-bs-toggle="modal" data-bs-target="#totalModal">
                            <i class="fas fa-plus-circle text-dark"></i>
                            <span id="total" class="text-uppercase text-dark">@JSMS.Resources.Language.Total</span>
                        </button>*@
                    <button type="button" id="add-new" class="btn btn-primary btn-sm ">
                        <i class="fas fa-plus-circle"></i>
                        <span class="text-uppercase">@JSMS.Resources.Language.Add@JSMS.Resources.Language.GenerateInvoice</span>
                    </button>
                    <button type="button" id="refresh" class="btn btn-success btn-sm">
                        <i class="fas fa-sync-alt"></i>
                        <span class="text-uppercase">@JSMS.Resources.Language.Refresh</span>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <table id="tbl-invoice" class="table table-striped table-hover" role="grid">
                            <thead>
                                <tr>
                                    <th>@JSMS.Resources.Language.Id</th>
                                    <th>@JSMS.Resources.Language.InvoiceNumber</th>
                                    <th>@JSMS.Resources.Language.Description</th>
                                    <th>@JSMS.Resources.Language.StartDate</th>
                                    <th>@JSMS.Resources.Language.Client</th>
                                    <th>@JSMS.Resources.Language.Total</th>
                                    <th>@JSMS.Resources.Language.Note</th>
                                    <th>@JSMS.Resources.Language.Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_GenerateInvoice")
@Html.Partial("_Invoice")
@section scripts {
    @Scripts.Render("~/Scripts/Functions/Invoice.js")
}