
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="m-0 text-uppercase">Attendance Management</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Home")">Home</a>
                    </li>
                    <li class="breadcrumb-item">Attendance</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="float-sm-right mr-5">
                    @*<button type="button" id="part-time" class="btn btn-warning btn-sm">
                            <i class="fas fa-plus-circle"></i>
                            <span class="text-uppercase">Part Time</span>
                        </button>*@

                    <button type="button" id="add-new" class="btn btn-success btn-sm">
                        <i class="fas fa-plus-circle"></i>
                        <span class="text-uppercase">Check In</span>
                    </button>
                    <button type="button" id="checkOutBtn" class="btn btn-warning btn-sm">
                        <i class="fas fa-plus-circle"></i>
                        <span class="text-uppercase">Check Out</span>
                    </button>
                    <button type="button" id="refresh" class="btn btn-danger btn-sm">
                        <i class="fas fa-sync-alt"></i>
                        <span class="text-uppercase">Refresh</span>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <table id="AttendanceTest" class="table table-striped table-hover" role="grid">
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_AttendanceTest")
@Html.Partial("CheckOut")

@section scripts {
    @Scripts.Render("~/Scripts/Functions/AttendanceTest.js")
}




