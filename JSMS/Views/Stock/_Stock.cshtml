<div class="modal fade" id="modal-stock" data-bs-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-uppercase">@JSMS.Resources.Language.StockProductInfo</h4>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <form method="post" enctype="multipart/form-data">
                <input type="hidden" id="data-id">

                <div class="modal-body">
                    <section>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label for="product-type">@JSMS.Resources.Language.Product</label>
                                    <select id="product-type" class="form-select">
                                        <option value="-1">---@JSMS.Resources.Language.Select @JSMS.Resources.Language.Product---</option>
                                        @foreach (var response in Model)
                                        {
                                            <option value="@response.Id">@response.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label for="stock-in-out">@JSMS.Resources.Language.StockType</label>
                                    <select id="stock-in-out" class="form-select">
                                        <option value="-1">@JSMS.Resources.Language.Select @JSMS.Resources.Language.StockType</option>
                                        <option value="1">@JSMS.Resources.Language.StockIn</option>
                                        <option value="2">@JSMS.Resources.Language.StockOut</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label for="quantity">@JSMS.Resources.Language.Quantity</label>
                                    <input type="text" class="form-control" id="quantity" placeholder="@JSMS.Resources.Language.Input @JSMS.Resources.Language.Quantity">

                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label for="date-in-out">@JSMS.Resources.Language.Date</label>
                                    <input type="text" class="form-control" id="date-in-out" placeholder="@JSMS.Resources.Language.Select @JSMS.Resources.Language.Date">

                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label for="s-noted">@JSMS.Resources.Language.Description</label>
                                    <textarea type="text" class="form-control" id="s-noted" placeholder="@JSMS.Resources.Language.Input @JSMS.Resources.Language.Description"></textarea>

                                </div>
                            </div>

                        </div>
                    </section>
                </div>

                <div class="modal-footer">
                    <section>
                        <button type="button" class="btn btn-dark" data-bs-dismiss="modal">
                            <i class=" fas fa-times-circle"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Close</span>
                        </button>
                        <button type="button" class="btn btn-success" id="update-stock">
                            <i class=" fas fas fa-redo-alt"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Update</span>
                        </button>
                        <button type="button" class="btn btn-info" id="save-stock">
                            <i class=" fas fa-save"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Save</span>
                        </button>
                    </section>
                </div>

            </form>
        </div>

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

