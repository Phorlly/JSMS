<table id="behavior" class="table table-striped table-hover w-100" role="grid">
    <thead>
        <tr>
            <th>@JSMS.Resources.Language.Id</th>
            <th>@JSMS.Resources.Language.FullName</th>
            <th>@JSMS.Resources.Language.Gender</th>
            <th>@JSMS.Resources.Language.Profile</th>
            <th>@JSMS.Resources.Language.Telephone</th>
            @*<th>@JSMS.Resources.Language.CurrentAddress</th>*@
            <th>@JSMS.Resources.Language.Confirmed</th>
            <th>@JSMS.Resources.Language.Date</th>
            <th>@JSMS.Resources.Language.Attachment</th>
            <th>@JSMS.Resources.Language.Description</th>
            <th>@JSMS.Resources.Language.Created</th>
            <th>@JSMS.Resources.Language.Updated</th>
            <th>@JSMS.Resources.Language.Actions</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@*===========================*@
<div class="modal fade" id="modal-behavior" data-bs-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-uppercase">@JSMS.Resources.Language.BehaviorInfo</h4>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <form method="post" enctype="multipart/form-data">
                <input type="hidden" id="behavior-id">

                <div class="modal-body">
                    <section>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="applicant">@JSMS.Resources.Language.Applicant</label>
                                    <select id="applicant-id" class="form-select">
                                        <option value="-1">---@JSMS.Resources.Language.Select @JSMS.Resources.Language.Applicant---</option>
                                        @foreach (var response in Model.Applicants)
                                        {
                                            <option value="@response.Id">@response.Name @response.NickName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="attachment">@JSMS.Resources.Language.Attachment</label>
                                    <input type="file" id="attachment" accept=".doc, .docx, .pdf" class="form-control">
                                </div>
                                <div id="get-file"></div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="confirm-by">@JSMS.Resources.Language.Confirmed</label>
                                    <input type="text" class="form-control" id="confirm-by" placeholder="@JSMS.Resources.Language.Input @JSMS.Resources.Language.Confirmed">

                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="current-date">@JSMS.Resources.Language.Date</label>
                                    <input type="text" class="form-control  mb-3" id="current-date" placeholder="@JSMS.Resources.Language.Select @JSMS.Resources.Language.Date">

                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label for="noted">@JSMS.Resources.Language.Description</label>
                                    <textarea type="text" class="form-control" id="b-noted" placeholder="@JSMS.Resources.Language.Input @JSMS.Resources.Language.Description"></textarea>

                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="modal-footer">
                    <section>
                        <button type="button" class="btn btn-dark" data-bs-dismiss="modal">
                            <i class=" fas fa-times-circle"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Close</span>
                        </button>
                        <button type="button" class="btn btn-success" id="update-behavior">
                            <i class=" fas fas fa-redo-alt"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Update</span>
                        </button>
                        <button type="button" class="btn btn-info" id="save-behavior">
                            <i class=" fas fa-save"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Save</span>
                        </button>
                    </section>
                </div>

            </form>
        </div>

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section scripts {
    @Scripts.Render("~/Scripts/Functions/Gaurantor.js")
}