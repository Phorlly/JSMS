<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="m-0 text-uppercase" id="title-attendance">@JSMS.Resources.Language.AttendanceManagement</h1>
                <h1 class="m-0 text-uppercase" id="tite-report">@JSMS.Resources.Language.ReportManagement</h1> 
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Home")">@JSMS.Resources.Language.Home</a>
                    </li>
                    <li class="breadcrumb-item">@JSMS.Resources.Language.Attendance</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div>
</div>
<div id="loading-gif"></div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">

                    <div class="col-md-6">
                        <ul class="nav nav-pills ml-auto p-2">
                            <li class="nav-item">
                                <a class="nav-link active" id="tab-attendance" href="#table-attendance"
                                    data-toggle="tab">
                                    <i class="fas fa-user-friends"></i>
                                    <span>@JSMS.Resources.Language.Attendance</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="tab-summary" href="#table-attendance-summary" data-toggle="tab">
                                    <i class="fas fa-users"></i>
                                    <span>@JSMS.Resources.Language.Summary</span>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-md-6 mt-2">
                        <div class="float-sm-right mr-5">
                            <button type="button" id="add-new" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus-circle"></i>
                                <span class="text-uppercase">@JSMS.Resources.Language.Add</span>
                            </button>
                            <button type="button" id="show-data" class="btn btn-success btn-sm">
                                <i class="fas fa-sync-alt"></i>
                                <span class="text-uppercase">@JSMS.Resources.Language.ShowData</span>
                            </button>
                        </div>
                    </div>
                </div>

            </div>

            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="table-attendance">
                        <div class="col-md-12">
                            <table id="attendance" class="table table-striped table-hover w-100" role="grid">
                                <thead>
                                    <tr>
                                        <th>@JSMS.Resources.Language.Id</th>
                                        <th>@JSMS.Resources.Language.FullName</th>
                                        <th>@JSMS.Resources.Language.Code</th>
                                        <th>@JSMS.Resources.Language.ShiftType</th>
                                        <th>@JSMS.Resources.Language.Location</th>
                                        <th>@JSMS.Resources.Language.CheckIn</th>
                                        <th>@JSMS.Resources.Language.CheckOut</th>
                                        <th>@JSMS.Resources.Language.Status</th>
                                        <th>@JSMS.Resources.Language.Actions</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="table-attendance-summary">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="month-year">@JSMS.Resources.Language.Monthly</label>
                                    <input type="month" id="month-year" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="by-staff">@JSMS.Resources.Language.Code</label>
                                    <select id="by-staff" class="form-select">
                                        <option value="null">@JSMS.Resources.Language.Select</option>
                                        @foreach (var response in Model)
                                        {
                                            <option value="@response.Id">@response.Code</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="by-shift">@JSMS.Resources.Language.ShiftType</label>
                                    <select id="by-shift" class="form-select">
                                        <option value="null">@JSMS.Resources.Language.Select</option>
                                        <option value="0">@JSMS.Resources.Language.Morning</option>
                                        <option value="1">@JSMS.Resources.Language.Night</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-12 mt-3 print-section">
              
                            <table id="attendance-summary" class="table table-group-divider text-nowrap">
                                <thead>
                                    <tr>
                                        <th>@JSMS.Resources.Language.Id</th>
                                        <th>@JSMS.Resources.Language.FullName</th>
                                        <th>@JSMS.Resources.Language.Code</th>
                                        <th>@JSMS.Resources.Language.ShiftType</th>
                                        <th>@JSMS.Resources.Language.Location</th>
                                        <th>@JSMS.Resources.Language.CheckIn</th>
                                        <th>@JSMS.Resources.Language.CheckOut</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>

                        </div>
                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div>
        </div>
    </div>
</div>
@Html.Partial("_Attendance")

@section scripts {
    @Scripts.Render("~/Scripts/Functions/Attendance.js")
}
