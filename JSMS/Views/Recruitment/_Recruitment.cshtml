<div class="modal fade" id="modal-Recruitment" data-bs-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-uppercase">@JSMS.Resources.Language.RecruitmentInfo</h4>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <form method="post" enctype="multipart/form-data">
                <input type="hidden" id="data-id">

                <div class="modal-body">
                    <section>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label for="applicant">@JSMS.Resources.Language.Applicant</label>
                                    <select id="applicant" class="form-select">
                                        <option value="-1">---@JSMS.Resources.Language.Select @JSMS.Resources.Language.Applicant---</option>
                                        @foreach (var response in Model.Applicants)
                                        {
                                            <option value="@response.Id">@response.Name @response.NickName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label for="gaurantor">@JSMS.Resources.Language.Guarantor</label>
                                    <select id="gaurantor" class="form-select">
                                        <option value="-1">---@JSMS.Resources.Language.Select @JSMS.Resources.Language.Guarantor---</option>
                                        @foreach (var response in Model.Gaurantors)
                                        {
                                            <option value="@response.Id">@response.Name @response.NickName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label for="on-date">@JSMS.Resources.Language.Date</label>
                                    <input type="text" class="form-control" id="on-date" placeholder="@JSMS.Resources.Language.Select @JSMS.Resources.Language.Date">

                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label for="noted">@JSMS.Resources.Language.Description</label>
                                    <textarea type="text" class="form-control" id="noted" placeholder="@JSMS.Resources.Language.Input @JSMS.Resources.Language.Description"></textarea>

                                </div>
                            </div>
                        </div>
                    </section>
                </div>

                <div class="modal-footer">
                    <section>
                        <button type="button" class="btn btn-dark" data-bs-dismiss="modal">
                            <i class=" fas fa-times-circle"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Close</span>
                        </button>
                        <button type="button" class="btn btn-success" id="update">
                            <i class=" fas fas fa-redo-alt"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Update</span>
                        </button>
                        <button type="button" class="btn btn-info" id="save">
                            <i class=" fas fa-save"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Save</span>
                        </button>
                    </section>
                </div>

            </form>
        </div>

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

