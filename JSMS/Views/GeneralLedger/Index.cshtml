<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="m-0 text-uppercase" style="font-family:'Khmer OS Battambang'">@JSMS.Resources.Language.GeneralLedger</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Home")">@JSMS.Resources.Language.Home</a>
                    </li>
                    <li class="breadcrumb-item">@JSMS.Resources.Language.GeneralLedger</li>
                </ol>
            </div>
        </div><!-- /.row -->
    </div>
</div>
<div id="loading-gif"></div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="float-sm-right mr-5">
                    <button type="button" id="total" class="btn btn-warning btn-sm " data-bs-toggle="modal" data-bs-target="#totalModal">
                        <i class="fas fa-eye"></i>
                        <span id="total" class="text-uppercase text-dark">@JSMS.Resources.Language.Total</span>
                    </button>
                    <button type="button" id="add-new" class="btn btn-primary btn-sm ">
                        <i class="fas fa-plus-circle"></i>
                        <span class="text-uppercase">@JSMS.Resources.Language.Add</span>
                    </button>
                    <button type="button" id="show-data" class="btn btn-success btn-sm">
                        <i class="fas fa-sync-alt"></i>
                        <span class="text-uppercase">@JSMS.Resources.Language.ShowData</span>
                    </button>
                    <button type="button" id="refresh" class="btn btn-secondary btn-sm">
                        <i class="fas fa-redo-alt"></i>
                        <span class="text-uppercase">@JSMS.Resources.Language.Refresh</span>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <table id="tblOtherGL" class="table table-striped table-hover" role="grid">
                            <thead>
                                <tr>
                                    <th>@JSMS.Resources.Language.Id</th>
                                    <th>@JSMS.Resources.Language.Invoice</th>
                                    <th>@JSMS.Resources.Language.Date</th>
                                    <th>@JSMS.Resources.Language.Cost</th>
                                    <th>@JSMS.Resources.Language.OtherGLType</th>
                                    <th>@JSMS.Resources.Language.Payment</th>
                                    <th>@JSMS.Resources.Language.Description</th>
                                    <th>@JSMS.Resources.Language.Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_OtherExpense")
@Html.Partial("_Total")

@section scripts {
    @Scripts.Render("~/Scripts/Functions/OtherGL.js")
}