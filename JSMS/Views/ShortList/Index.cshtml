<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="m-0 text-uppercase" style="font-family:'Khmer OS Battambang'">@JSMS.Resources.Language.ShortListManagement</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Home")">@JSMS.Resources.Language.Home</a>
                    </li>
                    <li class="breadcrumb-item">@JSMS.Resources.Language.ShortList</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div>
</div>
<div id="loading-gif"></div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="float-sm-right mr-5">
                    <button type="button" id="add-new" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus-circle"></i>
                        <span class="text-uppercase">@JSMS.Resources.Language.Add</span>
                    </button>
                    <button type="button" id="refresh" class="btn btn-success btn-sm">
                        <i class="fas fa-sync-alt"></i>
                        <span class="text-uppercase">@JSMS.Resources.Language.ShowData</span>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <table id="short-list" class="table table-striped table-hover" role="grid">
                            <thead>
                                <tr>
                                    <th>@JSMS.Resources.Language.Id</th>
                                    <th>@JSMS.Resources.Language.FullName</th>
                                    <th>@JSMS.Resources.Language.Gender</th>
                                    <th>@JSMS.Resources.Language.Profile</th>
                                    <th>@JSMS.Resources.Language.Code</th>
                                    <th>@JSMS.Resources.Language.Rating</th>  
                                    <th>@JSMS.Resources.Language.Date</th>
                                    <th>@JSMS.Resources.Language.Description</th>
                                    <th>@JSMS.Resources.Language.Created</th>
                                    <th>@JSMS.Resources.Language.Updated</th>
                                    <th>@JSMS.Resources.Language.Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_ShortList")

@section scripts {
    @Scripts.Render("~/Scripts/Functions/Short-List.js")
}
