<style>
    h5 button {
        font-family: 'Khmer OS Battambang'
    }
</style>
<!-- Modal -->
<div class="modal fade" id="totalModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-dark" id="exampleModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card text-center">
                    <div class="card-header text-success fs-3">
                        <h5>@JSMS.Resources.Language.Cost</h5>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title" >@JSMS.Resources.Language.Cost@JSMS.Resources.Language.Your :</h5>
                        <h1 class="card-text" id="totalValue"></h1>
                    </div>
                    <div class="card-footer text-muted">

                    </div>
                </div>

            </div>
            <div class="modal-footer" style=" font-family: 'Khmer OS Battambang'">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">@JSMS.Resources.Language.Close</button>
                @*<button type="button" class="btn btn-primary">Save changes</button>*@
            </div>
        </div>
    </div>
</div>

