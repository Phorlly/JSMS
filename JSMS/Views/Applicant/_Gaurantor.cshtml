<div class="modal fade" id="modal-gaurantor" data-bs-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-uppercase">Guarantor Infomations</h4>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <form method="post" enctype="multipart/form-data">
                <input type="hidden" id="guarantor-id">

                <div class="modal-body">
                    <section>
                        <div class="row">
                            <div class="col-md-9">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-2">
                                            <input type="text" class="form-control" id="g-birth-name" placeholder="">
                                            <label class="fw-normal" for="birth-name">Name in birth​ certificate</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-2">
                                            <input type="text" class="form-control" id="g-nick-name" placeholder="">
                                            <label class="fw-normal" for="g-nick-name">Nickname</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-2">
                                            <input type="text" class="form-control" id="g-national" placeholder="">
                                            <label class="fw-normal" for="g-national">National</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-2">
                                            <input type="text" class="form-control" id="g-nationality" placeholder="">
                                            <label class="fw-normal" for="g-nationality">Nationality</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-2">
                                            <input type="text" maxlength="15" class="form-control" id="g-phone1" placeholder="">
                                            <label class="fw-normal" for="g-phone1">Phone number line 1</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-2">
                                            <input type="text" maxlength="15" class="form-control" id="g-phone2" placeholder="">
                                            <label class="fw-normal" for="g-phone2">Phone number line 2</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 pl-5">
                                <div class="row">
                                    <div class="form-group">
                                        <img class="center img-responsive img-thumbnail" style="width: 12rem; height: 10.5rem"
                                             src="~/Images/blank-image.png" id="g-image" />
                                        <b class="btn-style-2 btn btn-dark">
                                            <i class="fa fa-upload pe-lg-3"></i> Upload Image
                                            <input onchange="guarantorImage(this)" type="file" id="g-image-file"
                                                   accept=".png, .jpg, .jpeg, .svg" />
                                        </b>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="g-gender">Gender</label>
                                    <select class="form-select" id="g-gender">
                                        <option value="false">ស្រី ​(Female)</option>
                                        <option value="true">ប្រុស (Male)</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="g-education">Education Level</label>
                                    <select class="form-select" id="g-education">
                                        <option value="-1">---Select education---</option>
                                        <option value="1">មិនបានសិក្សា (Not Studied)</option>
                                        <option value="2">បឋមសិក្សា (Primary School)</option>
                                        <option value="3">អនុវិទ្យាល័យ (Secondary School)</option>
                                        <option value="4">វិទ្យាល័យ (High School)</option>
                                        <option value="5">សាកលវិទ្យាល័យ (University)</option>
                                        <option value="6">ផ្សេងៗ (Other)</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <label>Place of Birth</label>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="g-birth-province">Province</label>
                                    <select id="g-birth-province" class="form-select">
                                        <option value="-1">---Please Select Province---</option>
                                        @foreach (var province in Model.Provinces)
                                        {
                                            <option value="@province.Id">@province.NameKh / @province.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6" id="g-birth-dis">
                                <div class="form-group">
                                    <label for="g-birth-district">District</label>
                                    <input type="hidden" id="g-birth-dis-id" />
                                    <select id="g-birth-district" class="form-select">
                                        <option value="-1">---Please Select District---</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6" id="g-birth-com">
                                <div class="form-group">
                                    <label for="g-birth-commune">Commune</label>
                                    <input type="hidden" id="g-birth-com-id" />
                                    <select id="g-birth-commune" class="form-select">
                                        <option value="-1">---Please Select Commune---</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6 ">
                                <div class="form-group" id="g-birth-vil">
                                    <label for="g-birth-village">Village</label>
                                    <input type="hidden" id="g-birth-vil-id" />
                                    <select id="g-birth-village" class="form-select">
                                        <option value="-1">---Please Select Village---</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mt-2">
                                <div class="form-floating mb-2">
                                    <input type="date" class="form-control" id="g-dob">
                                    <label for="g-dob">Date of birth</label>
                                </div>
                            </div>
                            <div class="col-md-6 mt-2">
                                <div class="form-floating mb-2">
                                    <textarea class="form-control" id="g-noted" placeholder=""></textarea>
                                    <label for="g-noted">Description</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <label>Current Address</label>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="g-current-province">Province</label>
                                    <select id="g-current-province" class="form-select">
                                        <option value="-1">---Please Select Province---</option>
                                        @foreach (var province in Model.Provinces)
                                        {
                                            <option value="@province.Id">@province.NameKh / @province.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6" id="g-current-dis">
                                <div class="form-group">
                                    <label for="g-current-district">District</label>
                                    <input type="hidden" id="g-current-dis-id" />
                                    <select id="g-current-district" class="form-select">
                                        <option value="-1">---Please Select District---</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6" id="g-current-com">
                                <div class="form-group">
                                    <label for="g-current-commune">Commune</label>
                                    <input type="hidden" id="g-current-com-id" />
                                    <select id="g-current-commune" class="form-select">
                                        <option value="-1">---Please Select Commune---</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6 ">
                                <div class="form-group" id="g-current-vil">
                                    <label for="g-current-village">Village</label>
                                    <input type="hidden" id="g-current-vil-id" />
                                    <select id="g-current-village" class="form-select">
                                        <option value="-1">---Please Select Village---</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>

                <div class="modal-footer">
                    <section>
                        <button type="button" class="btn btn-dark" data-bs-dismiss="modal">
                            <i class=" fas fa-times-circle"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Close</span>
                        </button>
                        <button type="button" class="btn btn-success" id="update-guarantor">
                            <i class=" fas fas fa-redo-alt"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Update</span>
                        </button>
                        <button type="button" class="btn btn-secondary" id="save-guarantor">
                            <i class=" fas fa-save"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Save</span>
                        </button>
                    </section>
                </div>

            </form>
        </div>

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

