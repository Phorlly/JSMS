<script>
    $(document).ready(function () {
        // Get the current URL
        var currentUrl = window.location.pathname;

        // Remove existing bg-warning class from all nav-links
        $('.navbar-nav a.nav-link').removeClass('bg-warning');
        // Remove existing bg-light class from all dropdown menu items
        $('.dropdown-menu a.nav-link').removeClass('bg-warning');
        $('.dropdown-toggle').removeClass('bg-warning');

        // Add bg-light class to the dropdown toggle link if its href attribute matches the current URL
        $('.dropdown-toggle[href="' + currentUrl + '"]').addClass('bg-warning');
        // Add bg-light class to the dropdown menu item with a matching href attribute
        $('.dropdown-menu a.nav-link[href="' + currentUrl + '"]').addClass('bg-warning');
        // Add bg-warning class to the nav-link with a matching href attribute
        $('.navbar-nav a.nav-link[href="' + currentUrl + '"]').addClass('bg-warning');
    });
</script>