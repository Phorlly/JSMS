<div class="modal fade" id="modal-Out" data-bs-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-uppercase">Staff Infomations</h4>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <form method="post" enctype="multipart/form-data">
                <input type="hidden" id="checkout-id" value="2">

                <div class="modal-body">
                    <section>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group mb-4">
                                    <label class="fw-normal" for="staffAtt">Attendance Activity</label>
                                    <select id="staffAttTest" class="form-select">
                                        <option value="-1">---Please select staff---</option>
                                        @foreach (var response in Model) //
                                        {
                                            <option value="@response.Id">
                                                @response.Code
                                            </option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <button id="checkOut" onclick="checkStatus(2)" type="button" class="btn btn-warning border-0 rounded-pill py-3 px-4 px-md-5 me-4 animated bounceInLeft w-100">
                                        Check Out
                                    </button>
                                </div>

                            </div>
                            <div class="col-md-12">
                                <div class="form-floating mb-4">
                                    <textarea type="text" class="form-control" id="noted" placeholder=""></textarea>
                                    <label class="fw-normal" for="noted">Note</label>
                                </div>
                            </div>

                        </div>
                    </section>
                </div>

                <div class="modal-footer">
                    <section>
                        <button type="button" class="btn btn-dark" data-bs-dismiss="modal">
                            <i class=" fas fa-times-circle"></i>
                            <span class="text-uppercase">Close</span>
                        </button>
                        @*<button type="button" class="btn btn-success" id="update">
                                <i class=" fas fas fa-redo-alt"></i>
                                <span class="text-uppercase">Update</span>
                            </button>
                            <button type="button" class="btn btn-secondary" id="save">
                                <i class=" fas fa-save"></i>
                                <span class="text-uppercase">Save</span>
                            </button>*@
                    </section>
                </div>

            </form>
        </div>

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


