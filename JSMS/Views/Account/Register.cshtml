@model JSMS.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";

    Layout = null;

}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Images/logoHRMS.png">
    <title>LOGUP</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Theme/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>

<body>
    <!--New form-->
    <div style="height: 100vh; " class="d-flex justify-content-center align-items-center ">

        <section>
            <div class="modal-lg form-control d-flex  shadow-lg p-5 mb-5 bg-body-tertiary rounded-4">

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="bg-body-tertiary">
                        <div class="mb-3 text-center">
                            <h1 class="text-secondary text-uppercase">@JSMS.Resources.Language.CreateNewAccount</h1>
                            <p class="fst-italic">@JSMS.Resources.Language.RememberUP</p>
                        </div>
                        <div>
                            @*<div class="form-floating mb-4">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "" })
                                @Html.LabelFor(c => c.Email)
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>*@

                            <div class="form-floating mb-4">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "" })
                                <label for="username">@JSMS.Resources.Language.Username</label>
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-floating mb-4">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "" })
                                <label for="username">@JSMS.Resources.Language.Password</label>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-4">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "" })
                                <label for="username">@JSMS.Resources.Language.ConfirmPassword</label>
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="footer">
                            <button type="submit" class="btn btn-secondary w-100 mb-2">
                                <i class="fas fa-user-plus"></i>
                                <b class="text-uppercase">@JSMS.Resources.Language.CreateAccount</b>
                            </button>
                            <div class="text-center">
                                <a class="nav-link" href="@Url.Action("Login","Account")">@JSMS.Resources.Language.AlreadyAccount</a>
                                @*@Html.ActionLink("Already account for Login right?", "Login", "Account", new { area = "" }, new { @class = "nav-link" })*@
                            </div>
                            <div class="text-center mt-2">
                                @if (Request.Cookies["Languages"].Value == "km")
                                {
                                    <a class="nav-link" href="@Url.Action("Change","Language",new {translator = "en"})" role="button">
                                        <img src="~/Images/us.png" style=" width: 17px;"> English
                                    </a>
                                }
                                else
                                {
                                    <a class="nav-link" href="@Url.Action("Change","Language",new {translator = "km"})" role="button">
                                        <img src="~/Images/kh.png" style=" width: 17px;">
                                        <span style="font-family:Hanuman">ភាសាខ្មែរ</span>
                                    </a>
                                }
                            </div>
                        </div>

                    </div>
                }
            </div>
        </section>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>

</html>
