<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="m-0 text-uppercase" id="tite-report">@JSMS.Resources.Language.Report​​ @JSMS.Resources.Language.Attendance</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Home")">@JSMS.Resources.Language.Home</a>
                    </li>
                    <li class="breadcrumb-item">@JSMS.Resources.Language.Attendance</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div>
</div>
<div id="loading-gif"></div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="float-sm-right mr-5">
                    <button type="button" id="refesh" class="btn btn-success btn-sm">
                        <i class="fas fa-redo-alt"></i>
                        <span class="text-uppercase">@JSMS.Resources.Language.Refresh</span>
                    </button>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="month-year">@JSMS.Resources.Language.Monthly</label>
                            <input type="month" id="month-year" class="form-control" placeholder="@JSMS.Resources.Language.Select @JSMS.Resources.Language.Monthly">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="by-staff">@JSMS.Resources.Language.Code</label>
                            <select id="by-staff" class="form-select">
                                <option value="null">@JSMS.Resources.Language.Select @JSMS.Resources.Language.Code</option>
                                @foreach (var response in Model)
                                {
                                    <option value="@response.Id">@response.Code</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="by-shift">@JSMS.Resources.Language.ShiftType</label>
                            <select id="by-shift" class="form-select">
                                <option value="null">@JSMS.Resources.Language.Select @JSMS.Resources.Language.ShiftType</option>
                                <option value="0">@JSMS.Resources.Language.Morning</option>
                                <option value="1">@JSMS.Resources.Language.Night</option>
                            </select>
                        </div>
                    </div>


                    <div class="col-md-12 mt-3">
                        <table id="attendance-summary" class="table table-group-divider text-nowrap">
                            <thead>
                                <tr>
                                    <th>@JSMS.Resources.Language.Id</th>
                                    <th>@JSMS.Resources.Language.FullName</th>
                                    <th>@JSMS.Resources.Language.Code</th>
                                    <th>@JSMS.Resources.Language.ShiftType</th>
                                    <th>@JSMS.Resources.Language.Location</th>
                                    <th>@JSMS.Resources.Language.CheckIn</th>
                                    <th>@JSMS.Resources.Language.CheckOut</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    @Scripts.Render("~/Scripts/Functions/Attendance.js")
}
