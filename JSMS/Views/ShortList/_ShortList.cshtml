<div class="modal fade" id="modal-short-List" data-bs-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-uppercase">@JSMS.Resources.Language.ShortListInfo</h4>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <form method="post" enctype="multipart/form-data">
                <input type="hidden" id="data-id">

                <div class="modal-body">
                    <section>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label class="fw-normal" for="recruitment">@JSMS.Resources.Language.ApplicantPassRecruitment</label>
                                    <select id="recruitment" class="form-select">
                                        <option value="-1">---@JSMS.Resources.Language.Select @JSMS.Resources.Language.ApplicantPassRecruitment---</option>
                                        @foreach (var response in Model)
                                        {
                                            <option value="@response.Recruitment.Id">@response.Applicant.Name @response.Applicant.NickName </option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label class="fw-normal" for="interview-number">@JSMS.Resources.Language.Code</label>
                                    <select id="interview-number" class="form-select">
                                        <option value="-1">---@JSMS.Resources.Language.Select @JSMS.Resources.Language.Code---</option>
                                        <option value="1">JLS-001</option>
                                        <option value="2">JLS-002</option>
                                        <option value="3">JLS-003</option>
                                        <option value="4">JLS-004</option>
                                        <option value="5">JLS-005</option>
                                        <option value="6">JLS-006</option>
                                        <option value="7">JLS-007</option>
                                        <option value="8">JLS-008</option>
                                        <option value="9">JLS-009</option>
                                        <option value="10">JLS-010</option>
                                        <option value="11">JLS-011</option>
                                        <option value="12">JLS-012</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-9">
                                <div class="form-group mb-3">
                                    <label class="fw-normal" for="on-date">@JSMS.Resources.Language.Date</label>
                                    <input type="text" class="form-control" id="on-date" placeholder="@JSMS.Resources.Language.Select @JSMS.Resources.Language.Date">

                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group rating-container">
                                    <label class="fw-normal" for="rating">@JSMS.Resources.Language.Rating</label>
                                    <div class="rating">
                                        <input type="radio" id="star5" name="rating" value="5">
                                        <label for="star5">☆</label>
                                        <input type="radio" id="star4" name="rating" value="4">
                                        <label for="star4">☆</label>
                                        <input type="radio" id="star3" name="rating" value="3">
                                        <label for="star3">☆</label>
                                        <input type="radio" id="star2" name="rating" value="2">
                                        <label for="star2">☆</label>
                                        <input type="radio" id="star1" name="rating" value="1">
                                        <label for="star1">☆</label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label class="fw-normal" for="noted">@JSMS.Resources.Language.Description</label>
                                    <textarea type="text" class="form-control" id="noted" placeholder="@JSMS.Resources.Language.Input @JSMS.Resources.Language.Description"></textarea>

                                </div>
                            </div>

                        </div>
                    </section>
                </div>

                <div class="modal-footer">
                    <section>
                        <button type="button" class="btn btn-dark" data-bs-dismiss="modal">
                            <i class=" fas fa-times-circle"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Close</span>
                        </button>
                        <button type="button" class="btn btn-success" id="update">
                            <i class=" fas fas fa-redo-alt"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Update</span>
                        </button>
                        <button type="button" class="btn btn-info" id="save">
                            <i class=" fas fa-save"></i>
                            <span class="text-uppercase">@JSMS.Resources.Language.Save</span>
                        </button>
                    </section>
                </div>

            </form>
        </div>

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
