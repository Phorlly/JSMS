<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="m-0 text-uppercase">Stock Transaction Management</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Home")">@JSMS.Resources.Language.Home</a>
                    </li>
                    <li class="breadcrumb-item">Stock Transaction</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div>
</div>
<div class="row">
    <div class="col-12">
        <!-- Custom Tabs -->
        <div class="card">
            <div class="card-header  pl-4">
                <div class="row">
                    <div class="col-md-6">
                        <ul class="nav nav-pills ml-auto p-2">
                            <li class="nav-item">
                                <a class="nav-link  active" id="tab-product" href="#table-product" data-toggle="tab">
                                    <i class="fas fa-shekel-sign"></i>
                                    <span>Product</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="tab-stock" href="#table-stock" data-toggle="tab">
                                    <i class="fas fa-shopping-cart"></i>
                                    <span>Stock</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="tab-summary" href="#table-summary" data-toggle="tab">
                                    <i class="fas fa-layer-group"></i>
                                    <span>Summary</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-6 mt-2">
                        <div class="float-sm-right mr-5">
                            <button type="button" id="add-product" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus-circle"></i>
                                <span class="text-uppercase">Add Product</span>
                            </button>
                            <button type="button" id="add-stock" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus-circle"></i>
                                <span class="text-uppercase">Add Stock</span>
                            </button>
                            <button type="button" id="refresh" class="btn btn-success btn-sm">
                                <i class="fas fa-sync-alt"></i>
                                <span class="text-uppercase">@JSMS.Resources.Language.Refresh</span>
                            </button>
                        </div>
                    </div>
                </div>

            </div><!-- /.card-header -->
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="table-product">
                        <div class="col-md-12">
                            <table id="product" class="table table-striped table-hover w-100" role="grid"></table>
                        </div>
                    </div>
                    <div class="tab-pane" id="table-stock">
                        <div class="col-md-12">
                            <table id="stock" class="table table-striped table-hover w-100" role="grid"></table>
                        </div>
                    </div>
                    <div class="tab-pane" id="table-summary">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="month-year">By Month</label>
                                    <input type="month" id="month-year" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="by-product">By Product</label>
                                    <select id="by-product" class="form-select">
                                        <option value="null">Select Staff</option>
                                        @foreach (var response in Model) 
                                        {
                                            <option value="@response.Id">@response.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="by-stock">By Stock</label>
                                    <select id="by-stock" class="form-select">
                                        <option value="null">Select Stock In/Out</option>
                                        <option value="1">ទំនិញចូលក្នុងស្តុក (Stock-in)</option>
                                        <option value="2">ទំនិញចេញពីស្តុក (Stock-out)</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <b class="text-danger fst-italic">100</b>
                        <div class="col-md-12 mt-3 print-section">

                            <table id="stock-summary" class="table table-group-divider text-nowrap">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name of Product</th>
                                        <th>Stock In</th>
                                        <th>Stock Out</th>
                                        <th>Date</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <!-- /.tab-content -->
            </div><!-- /.card-body -->
        </div>
        <!-- ./card -->
    </div>
    <!-- /.col -->
</div>

@Html.Partial("_Product")
@Html.Partial("_Stock")

@section scripts {
    @Scripts.Render("~/Scripts/Functions/Stock.js")
    @Scripts.Render("~/Scripts/Functions/Product.js")
}
