@model JSMS.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";

    Layout = null;

}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Images/logoHRMS.png">
    <title>LOGUP</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Theme/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
</head>

<body>
    <!--New form-->
    <div style="height: 100vh; " class="d-flex justify-content-center align-items-center">

        <section>
            <div class="form-control d-flex  shadow-lg p-5 mb-5 bg-body-tertiary rounded-4">

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="bg-body-tertiary">
                        <div class="mb-3 text-center">
                            <h1 class="text-secondary text-uppercase">Create New Account</h1>
                            <p class="fst-italic">Please remember your Username and Password</p>
                        </div>
                        <div>
                            @*<div class="form-floating mb-4">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "" })
                                @Html.LabelFor(c => c.Email)
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>*@

                            <div class="form-floating mb-4">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "" })
                                @Html.LabelFor(c => c.UserName)
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-floating mb-4">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "" })
                                @Html.LabelFor(c => c.Password)
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-4">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "" })
                                @Html.LabelFor(c => c.ConfirmPassword)
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="footer">
                            <button type="submit" class="btn btn-secondary w-100 mb-2">
                                <i class="fas fa-user-plus"></i>
                                <b class="text-uppercase">Create Account</b>
                            </button>
                            <div class="text-center">
                                @Html.ActionLink("Already account for Login right?", "Login", "Account", new { area = "" }, new { @class = "nav-link" })
                            </div>
                        </div>

                    </div>
                }
            </div>
        </section>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>

</html>
